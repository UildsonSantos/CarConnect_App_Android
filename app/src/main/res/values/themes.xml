<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CarConnect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pumpkin</item>
        <item name="colorPrimaryVariant">@color/tangerine</item>
        <item name="colorOnPrimary">@color/snow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/slate_gray</item>
        <item name="colorSecondaryVariant">@color/steel_blue</item>
        <item name="colorOnSecondary">@color/snow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/AppTheme.TextInputLayout</item>
        <item name="colorControlNormal">@color/textInputLayoutBoxBackgroundColor</item>
        <item name="colorControlActivated">@color/textInputLayoutBoxStrokeColor</item>
    </style>
    <style name="AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Adicione as propriedades que vocÃª deseja personalizar, como a cor de fundo e a cor do contorno. Por exemplo: -->
        <item name="boxBackgroundColor">@color/textInputLayoutBoxBackgroundColor</item>
        <item name="boxStrokeColor">@color/textInputLayoutBoxStrokeColor</item>
    </style>
</resources>